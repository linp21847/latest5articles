{
    "manifest_version": 2,
    "name": "Latest 5 Articles",
    "version": "0.4",
    "icons": {
       "16": "/assets/img/favicon.png",
       "64": "/assets/img/favicon.png"
    },

    "permissions": [
        "tabs",
        "chrome://favicon/",
        "http://*/*",
        "https://*/*",
        "storage"
    ],

    "browser_action": {
        "default_title": "Latest Articles",
        "default_icon": "assets/img/favicon.png",
        "default_popup": "assets/html/popup.html"
    },

    "web_accessible_resources": [
    ]
}